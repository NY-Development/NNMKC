generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin User model for authentication and access control
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
}

// CMS Page model for managing dynamic site content (e.g. About Us, Ministries)
model Page {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // SEO fields
  metaTitle   String?
  metaDesc    String?

  @@map("pages")
}

// Sermons model for managing church sermons and media
model Sermon {
  id           String   @id @default(uuid())
  title        String
  preacher     String
  videoUrl     String
  thumbnailUrl String?
  description  String?  @db.Text
  datePreached DateTime
  series       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("sermons")
}

// Staff/Team model for displaying pastors and leaders
model Staff {
  id        String   @id @default(uuid())
  name      String
  role      String   // e.g. "Senior Pastor", "Youth Leader"
  bio       String?  @db.Text
  email     String?
  photoUrl  String?
  order     Int      @default(0) // Control display order (low numbers first)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("staff")
}

// Ministries model for church groups (Youth, Kids, Worship, etc.)
model Ministry {
  id          String   @id @default(uuid())
  name        String   // e.g. "Youth Ministry"
  slug        String   @unique // e.g. "youth"
  description String?  @db.Text
  
  // Strategic Details
  mission     String?  @db.Text
  vision      String?  @db.Text // "Objective" usually fits here
  values      String?  @db.Text

  // Logistics
  meetingTime String?  // e.g. "Fridays at 6:00 PM"
  location    String?  // e.g. "Main Hall"
  leaderName  String?  // e.g. "Brother John"
  contactInfo String?  // e.g. "youth@nnmkc.org"
  
  imageUrl    String?  // Banner or logo for the ministry
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("ministries")
}

// Articles/Blog model for news, devotionals, and updates
model Article {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  excerpt     String?  // Short summary for lists
  imageUrl    String?  // Featured image
  
  author      String?  // e.g. "Rev. Abraham" or default to Admin
  category    String   // e.g. "News", "Devotional", "Event"
  tags        String[] // Array of strings e.g. ["faith", "prayer"]
  
  isPublished Boolean  @default(false)
  isFeatured  Boolean  @default(false) // For homepage slider
  
  views       Int      @default(0)
  
  publishedAt DateTime? // Can be future-dated for scheduling
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // SEO fields
  metaTitle   String?
  metaDesc    String?

  @@map("articles")
}

// Events model for church calendar and special occasions
model Event {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String?  @db.Text
  
  startDate   DateTime
  endDate     DateTime? // Optional end time
  
  location    String?  // e.g. "Main Sanctuary" or "Zoom"
  imageUrl    String?  // Event flyer
  
  isFeatured  Boolean  @default(false) // Pin to homepage
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("events")
}
