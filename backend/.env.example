# Database Configuration for Docker
# Copy this file to .env and update with your actual values
# NEVER commit .env to git!

# PostgreSQL Database Credentials
DB_USER=nnmkc_user
DB_PASSWORD=nnmkc_password
DB_NAME=nnmkc_db
DB_PORT=5432

# Database Connection String (for Prisma/NestJS)
DATABASE_URL= db://nnmkc_user:nnmkc_password@localhost:5432/nnmkc_db?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Application
PORT=3000
NODE_ENV=development

# Chapa Payment Gateway 
CHAPA_SECRET_KEY= chapa_secret_key
CHAPA_PUBLIC_KEY= chapa_publick_key

# Initial Admin Credentials
ADMIN_EMAIL= admin email
ADMIN_PASSWORD= admin password (Choose strong password)

# Media / Image Storage Configuration
MEDIA_CLOUD_NAME=your_cloud_name
MEDIA_API_KEY=your_api_key
MEDIA_API_SECRET=your_api_secret